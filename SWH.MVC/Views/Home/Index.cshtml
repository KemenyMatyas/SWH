@using SWH.Data.Models
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <button id="xmlImport" class="col-md-3 btn btn-primary">Export Data To XML</button>
    <div class="row">
        <div class="col-12">
            @(Html.Kendo().Grid<Person>()
                .Name("gridPerson")
                .Columns(columns =>
                {
                    columns.Bound(p => p.Id).Hidden();
                    columns.Bound(p => p.UserName);
                    columns.Bound(p => p.FirstName);
                    columns.Bound(p => p.LastName);
                    columns.Bound(p => p.BirthDay).Format("{0:yyyy/MM/dd}");
                    columns.Bound(p => p.PlaceOfBirth);
                    columns.Bound(p => p.Domicile);
                    columns.Command(command => command.Custom("ViewDetails").Click("showDetails"));
                })
                .HtmlAttributes(new {style = "height:550px;"})
                .Filterable()
                .Pageable(pageable => pageable
                    .Refresh(true)
                    .PageSizes(true)
                    .ButtonCount(3))
                .DataSource(dataSource => dataSource
                    .Ajax()
                    .PageSize(20)
                    .Read(read => read.Action("GetAllPersons", "GridPerson"))
                )
                )
        </div>
    </div>
</div>

@(Html.Kendo().Window().Name("Details")
    .Title("Person Details Form")
    .Visible(false)
    .Modal(true)
    .Draggable(true)
    .Width(500)
    .Events(e => e            
        .Close("CloseWindow"))  
    )
    )

@section scripts
{
    <script type="text/javascript">  
    
        function CloseWindow() {         
            location.reload();
         }
       
        function showDetails(e) {
            e.preventDefault();
        
            var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
                         
                         
            $.ajax({
                url: 'Home/Details/',
                type: 'GET',
                data: {
                    personId: Object.values(dataItem)[2],
        
                },
                success: function(result) {                       
                    var wnd = $("#Details").data("kendoWindow");
                    wnd.content(result);
                    wnd.center().open();
                    

                }
            });
        }
        
        $("#xmlImport").click(function() {
            let grid = $("#gridPerson");
            let data = grid.data("kendoGrid").dataSource.data()
            console.log(data[2])
            
            
            var doc = $.parseXML("<xml/>")
            
            var xml = doc.getElementsByTagName("xml")[0]
            var  key, elem
            
         
            for (let i = 0; i < data.length; i++) {  
                          var items = data[1]
                
                          for (key in items) {
                                      if (items.hasOwnProperty(key)) {
                                        elem = doc.createElement(key)
                                        $(elem).text(items[key])
                                        xml.appendChild(elem)
                                }                                                                                       
                          }
            }                                              
            console.log(xml.outerHTML)  
            
        })
        
    </script>
}